/* miniprogram/pages/front.wxss */



.userSectionView{
  width: 90%;
  height: 180rpx;
  margin-top: 30rpx;
  margin-left: 5%;
  margin-right: 5%;
  border: 8rpx solid #437dd4;
  border-radius: 100rpx;
  background-color: white;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}


.userinfo{
  height: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background-color: white;
}

.userinfo-avatar{
  height:130rpx;
  width: 130rpx;
  margin-left: 30rpx;
  border-radius: 50%;
}

.userinfo-nickname{
  height: 100%;
  width: 300rpx;
  color:black;
  font-size: 32rpx;
  font-weight: normal;
  display: flex;
  align-items: center;
  margin-left: 20rpx;
}

.location{
  width: 180rpx;
  margin-right: 20rpx;
  padding: 6rpx;
  line-height: 50rpx;
  border: 5rpx solid #437dd4;
  border-radius: 30rpx;
  font-size: 30rpx;
  color: rgb(0,0,0,0.6);
  text-align: center;
}
/* ———————————————————————————— */
.plate{
  height:200rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  margin-left: 5%;
  margin-right: 5%;
  border: 8rpx solid #437dd4;
  border-radius: 30rpx;
  padding: 20rpx;
}
.plate-item{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.plate-img image{
  width: 110rpx;
  height: 110rpx;
}

.announcement{
  height:430rpx;
  background: #fff;
  margin-top: 20rpx;
  margin-left: 5%;
  margin-right: 5%;
  border: 8rpx solid #437dd4;
  border-radius: 30rpx;
  padding: 20rpx;
}



