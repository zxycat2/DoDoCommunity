/* miniprogram/pages/announcementDetail.wxss */

.announcementDetailPage{
  width: 100%;
  height: 100%;
  
  display: flex;
  flex-direction: column;
  justify-content: top;
  align-items: center;
}

.outerFrame{
  margin: 5%;
  padding: 5%;

  height: 90%;
  width: 80%;

  border: 8rpx solid #437dd4;
  border-radius: 30rpx;
  background-color: white;

  display: flex;
  flex-direction: column;
  justify-content: top;
  align-items: center;
}

.title{
  font-size: 40rpx;
  font-weight: bolder;
}

.time{
  margin: 25rpx;
}

.content{
  font-size: 35rpx;
}

.photoFrame{
  margin-top: 3%;
}

.deleteButton{
  margin-top: 5%;
  flex-shrink: 0;

  background-color: #EE4000;
  color: white;
}

.adminSection{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  margin-bottom: 40rpx;
  margin-top: 20rpx;

  border-radius: 30rpx;
  background-color: #EAF0FB;

  padding: 40rpx;
}

.swiucthSection{
  margin-left: 40rpx;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.itemSet{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}