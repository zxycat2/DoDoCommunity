/* miniprogram/pages/announcementDetail.wxss */

.announcementDetailPage{
  width: 100%;
  height: 100%;
  
  display: flex;
  flex-direction: column;
  justify-content: top;
  align-items: center;
}

.outerFrame{
  margin: 5%;
  padding: 5%;

  height: 90%;
  width: 80%;

  border: 8rpx solid #437dd4;
  border-radius: 30rpx;
  background-color: white;

  display: flex;
  flex-direction: column;
  justify-content: top;
  align-items: center;
}

.title{
  font-size: 40rpx;
  font-weight: bolder;
}

.time{
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}


.creator{
  margin-top: 20rpx;
}

.description{
  font-size: 35rpx;
  margin-top: 20rpx;
}

.photoFrame{
  margin-top: 3%;
}


.optionSection{
  margin-top: 5%;
  width: 90%;
}

.value-class {
  flex: none !important;
}

.line-button{
  margin: 40rpx;
}

.submit{
  background-color: #437dd4;
  color: white;
  font-size: 33rpx;
  border-radius: 20rpx;
  width:30%;
  height:100rpx;
  line-height:100rpx;
  margin-left:5%;
  margin-right:5%;
  padding:0rpx;
}



.afterVoted{
  width: 90%;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

.progressText{
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

.progressBar{
  width: 100%;
  height: 100%;
}

.deleteButton{
  margin-top: 5%;
  flex-shrink: 0;

  background-color: #EE4000;
  color: white;
}

.adminSection{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;

  margin-bottom: 40rpx;
  margin-top: 20rpx;

  border-radius: 30rpx;
  background-color: #EAF0FB;

  padding: 40rpx;
}

.swiucthSection{
  margin-left: 40rpx;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.itemSet{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
