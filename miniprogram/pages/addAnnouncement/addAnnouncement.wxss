/* miniprogram/pages/addAnnouncement.wxss */

.addAnnouncementDetailPage{
  width: 100%;
  height: 100%;
  
  display: flex;
  flex-direction: column;
  justify-content: top;
  align-items: center;
}

.outerFrame{
  margin: 5%;
  padding: 2%;

  height: 90%;
  width: 86%;

  border: 8rpx solid #437dd4;
  border-radius: 30rpx;
  background-color: white;

  display: flex;
  flex-direction: column;
  justify-content: top;
  align-items: center;
}

.line-block{
  width: 90%;
  margin-top: 30rpx;
  margin-left: 5%;
  margin-right: 5%;
  background-color: #eaf0fb;
  border-radius: 20rpx;
  display: flex;
  justify-content: space-between;
}

.line-txt{
  width: 26%;
  margin-left: 4%;
  height: 100rpx;
  font-size: 34rpx;
  line-height: 100rpx;
  color: #949494;
}

.line-select{
  width: 66%;
  margin-right: 4%;
  height: 100rpx;
  font-size: 34rpx;
  line-height: 100rpx;
  text-align: left;
}

.content{
  width: 82%;
  height: 55%;
  margin-left: 5%;
  margin-right: 5%;
  margin-top: 40rpx;
  padding: 4%;
  background-color: #eaf0fb;
  border-radius: 20rpx;
  font-size: 34rpx;
  line-height: 50rpx;

  flex-shrink: 0;
}

.upload-txt{
  width: 100%;
  line-height: 100rpx;
  text-align: center;
  color: #437dd4;
  font-size: 34rpx;
}

.upload-image{
  width: 90%;
  margin-left: 5%;
  margin-right: 5%;
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

.line-button{
  margin-top: 40rpx;
  padding-bottom: 80rpx;
}

.submit{
  background-color: #437dd4;
  color: white;
  font-size: 33rpx;
  border-radius: 20rpx;
  width:90%;
  height:100rpx;
  line-height:100rpx;
  margin-left:5%;
  margin-right:5%;
  padding:0rpx;
}